<h1>Hello World!</h1>
<body>
    <div class="Container"> 
    <ul id="box1">
        <h1> Todo list </h1>
    <h2> November 12, 2017 </h2>
<% @todos.each do |todo| %>    
  <li> 
  <input type="checkbox">
  
   <a href="/todo/show/<%=todo.id%>"> <%=todo.description%></a>
  <span class="timer-estimate"> <%=todo.pomodoro_estimate%> </span>
  </li>
  <% end %>
  
</ul>
<div id="box2"><iframe src="https://calendar.google.com/calendar/embed?src=ousd.k12.ca.us_1t26t6fikmh2tau5pc2s04naf0%40group.calendar.google.com&ctz=America/Los_Angeles" style="border: 0" width="600" height="500" frameborder="0" scrolling="no"></iframe></div>

</div>
</body> 
